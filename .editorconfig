# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,class,cpp,cs,go,h,htm,html,js,jslib,jspre,json,kt,m,mm,php,py,rs,swift,ts}]
indent_size = 4

[*.{css,lua,rb,sass,scss,sh,sql,xaml,xml,yml,yaml}]
indent_size = 2
